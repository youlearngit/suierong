.bg1 {
    position: absolute;
    top: 0;
    left: 0;
    width: 100vh;
    height: 100%;
    /* height: 335rpx; */
    z-index: -1;
}

.button-sp-area {
    margin: 0 40rpx;
    width: auto;
    display: flex;
    justify-content: center;
}

.btn {
    display: inline-block;
    width: 300rpx;
    height: 100rpx;
    margin: 0 25rpx;
    border-radius: 10rpx;
    text-align: center;
    line-height: 100rpx;
    color: #fff;
    font-size: 40rpx;
    border: none;
    background: rgba(234, 150, 3, .7);
    overflow: hidden;
    transition: all 900ms ease-in;
    animation-iteration-count: infinite;
    animation-timing-function: linear;
    animation-name: orbit;
    animation-duration: 3s;
}

