@import "/assets/styles/weui.wxss";
page {
    background-color: white;
    overflow-x: hidden;
}

.bottom .saveBtn {
    position: fixed;
    bottom: 2%;
    right: 5%;
    width: 40%;
    background-color: #16a8fa;
    color: white;
}

.bottom .saveBtns {
    position: fixed;
    bottom: 2%;
    left: 5%;
    width: 40%;
    background-color: #16a8fa;
    color: white;
}

.saveBtn:active {
    background-color: #4093ff;
}

.saveBtns:active {
    background-color: #4093ff;
}

.bottom .delBtn {
    position: fixed;
    bottom: 5%;
    left: 5%;
    width: 40%;
