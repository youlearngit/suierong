/* sub2/pages/photovoltaicLoanApply/index.wxss */

.photovoltaic {
    position: relative;
    width: 100%;
    height: 120%;
    background-repeat: no-repeat;
    background-size: 100% 100%;
    -moz-background-size: 100% 100%;
}

.applys {
    padding: 71rpx 0 15rpx 40rpx;
    width: 100%;
    height: 80rpx;
    background-repeat: no-repeat;
    background-size: 45% 45%;
    -moz-background-size: 45% 45%;
    background-position: 40rpx 40rpx;
}

.apply_title {
    font-family: SourceHanSansSC-Bold;
    font-size: 38rpx;
    color: #0440AF;
    letter-spacing: 0;
    font-weight: bolder;
}

.apply_info_list {
    margin: 1% auto 3%;
    width: 92%;
    background: #FFFFFF;
    border: 1rpx solid #FFFFFF;
    border-radius: 18rpx;
}

.action {
    width: 50%;
    height: 100rpx;
    position: absolute;
    right: 0;
    top: 50%;
    z-index: 99;
    transform: translateY(-50%);
}

.field-input {
    width: 100%;
    background: #ffffff;
    overflow: hidden;
}

.self {
    display: flex;
    align-items: center;
}

van-field {
    width: 100%;
}

.van-cell {
    padding: 30rpx !important;
}

.enterprise .van-cell {
    padding: 0 30rpx 23rpx !important;
}

.van-radio__label,
.van-cell__title,
.van-cell__value {
    font-size: 28rpx;
}

.van-radio {
    margin-left: 42rpx;
}

.enterprise .van-field__input {
    background: #f7fbff;
    border: 1rpx solid #d2ddff;
    border-radius: 10rpx;
    height: 85rpx;
    padding: 0 22rpx;
    color: #333;
}

.upload-image {
    position: relative;
}

.upload-image .camera {
    width: 38rpx;
    position: absolute;
    right: 70rpx;
    top: 50%;
    transform: translateY(-50%);
}

.btn-confirm {
    width: 444rpx;
    height: 86rpx;
    margin: 100rpx auto 0;
    line-height: 86rpx;
    background-image: linear-gradient(2deg, #507aff 0%, #6495ff 100%);
    border-radius: 43rpx;
    font-family: PingFangSC-Regular;
    font-size: 34rpx;
    color: #ffffff;
    text-align: center;
}

.imageBox {
    width: 100vh;
    height: 100vh;
    background: white;
}

.enter-list {
    width: 630rpx;
    max-height: 340rpx;
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    color: #041733;
    line-height: 50rpx;
    position: absolute;
    box-shadow: 0rpx 5rpx 20rpx 0rpx rgba(0, 0, 0, 0.16);
    z-index: 9;
    background: white;
    left: 30rpx;
    top: 90rpx;
    text-align: right;
    padding: 10rpx 20rpx;
    text-align: left;
    box-sizing: border-box;
    border-radius: 10rpx;
    overflow: hidden;
}

.hidden-title .van-cell:after {
    border: none;
}

.van-cell:after {
    width: 630rpx;
}

.van-picker__cancel,
.van-picker__confirm {
    color: #477dfa !important;
}

.van-radio__icon--checked {
    color: #fff;
    background-color: #477dfa !important;
    border-color: #477dfa !important;
}

.van-cell__title {
    max-width: 190rpx !important;
}

.spec {
    width: 100%;
    position: relative
}

.spec1 {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 28rpx;
    padding: 30rpx;
}

.choose {
    width: 50%;
    height: 100rpx;
    position: absolute;
    right: 0;
    top: 50%;
    z-index: 100;
    transform: translateY(-50%);
    background: transparent;
}

.apply_btn {
    display: flex;
    justify-content: space-around;
    align-items: center;
    margin: 10% 3.3% 3%;
}

.btn2 {
    width: 226rpx;
    height: 80rpx;
    border: 1rpx solid #2785FF;
    border-radius: 40rpx;
    font-family: SourceHanSansSC-Regular;
    font-size: 30rpx;
    color: #2785FF;
    text-align: center;
}

.btn1 {
    width: 438rpx;
    height: 80rpx;
    background-image: linear-gradient(106deg, #0A92FC 9%, #0459F8 100%);
    border-radius: 40rpx;
    font-family: SourceHanSansSC-Regular;
    font-size: 30rpx;
    color: #FFFFFF;
    text-align: center;
}