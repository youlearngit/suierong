<view class='banner'>
  <image mode="widthFix" wx:if="{{preffixUrl}}" src="{{preffixUrl}}/static/wechat/credit/zx_title.png" style="width:100%"></image>
</view>
<view style="width:90%;margin:auto">
  <view class="formInfo" style="width:100%;margin:auto">
    <view class="title">身份证信息</view>
    <view class="weui-cell weui-cell_input " >
      <view class="weui-cell__hd">
        姓名
      </view>
      <view class="weui-cell__bd">
      </view>
      <view class="weui-cell__ft">
        {{idcard.name}}
      </view>
    </view>
    <view class="weui-cell weui-cell_input ">
      <view class="weui-cell__hd">
       证件类型
      </view>
      <view class="weui-cell__bd">
      </view>
      <view class="weui-cell__ft">
        二代身份证
      </view>
    </view>
    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__hd">
        证件号码
      </view>
      <view class="weui-cell__bd">
      </view>
      <view class="weui-cell__ft">
        {{idcard.number}}
      </view>
    </view>


    <view class="weui-cell weui-cell_input" style="height:0">
    </view>
    <view class="bottom">
      <button bindtap="navTo">确认</button>
    </view>
  </view>
  <i-toast id="toast" />
</view>
