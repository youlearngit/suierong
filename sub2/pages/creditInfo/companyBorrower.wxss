    @import "/assets/styles/weui.wxss";
    page {
        background-color: white;
    }
    
    .serBtn {
        font-size: 26rpx;
        line-height: 40rpx;
        padding: 0 15rpx;
        color: white;
        background-color: #0066b3;
        margin-left: 20rpx;
    }
    
    .bottom button {
        position: absolute;
        bottom: 5%;
        left: 5%;
        width: 90%;
        background-color: #16a8fa;
        color: white;
    }
    .coverBox {
        position: fixed;
        width: 100%;
        height: 48%;
        top: 48%;
        left: 0;
        background: #f7f7f7;
        z-index: 10002;
    }
    .bottom2 button {
        background-color: #16a8fa;
        color: white;
    }
    
    .radio-group {
        display: flex;
    }
    
    .weui-select {
        border-right: 0rpx solid #d9d9d9;
    }
    /* 自定义 radio 样式 */
    
    radio {
        width: 70rpx;
    }
    
    radio .wx-radio-input {
        border-radius: 50%;
        /* width: 85rpx;
    height: 45rpx; */
    }
    /* 选中后的样式 （可根据设计稿需求自己修改） */
    
    radio .wx-radio-input.wx-radio-input-checked::before {
        border-radius: 50%;
        width: 60rpx;
        height: 60rpx;
        line-height: 60rpx;
        text-align: center;
        font-size: 25rpx;
        /* 对勾大小 26rpx */
        color: #fff;
        /* 对勾颜色 */
        background: #2facff;
        border-color: #2facff;
    }
    
    .title {
        /* width: 94%; */
        margin: auto;
        font-size: 34rpx;
        margin-top: 40rpx;
        margin-bottom: 30rpx;
        font-weight: bold;
        color: #0066b3;
    }
    
    .qy .weui-cell weui-cell_input::before {
        border-top: 0rpx;
    }
    
    .weui-label {
        color: #0066b3;
    }
    
    .cc {
        height: 2.58823529em;
        min-height: 2.58823529em;
        line-height: 2.58823529em;
        display: flex;
        align-items: center;
    }