/* sub2/pages/photovoltaicLoan/index.wxss */

.photovoltaic {
    position: relative;
    width: 100%;
    height: 2135rpx;
    background-repeat: no-repeat;
    background-size: 100% 100%;
    -moz-background-size: 100% 100%;
}

.photovoltaic_search {
    width: 100%;
    height: 510rpx;
    position: relative;
    display: flex;
    justify-content: flex-end;
    align-items: center;
}

.btns {
    width: 242rpx;
    height: 58rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(0, 0, 0, 0.33);
    border-radius: 44rpx;
    margin-top: 95rpx;
    margin-right: 15rpx;
}

.btns image {
    width: 28rpx;
}

.btns text {
    margin-left: 12rpx;
    font-family: SourceHanSansCN-Regular;
    font-size: 26rpx;
    color: #FFFFFF;
    letter-spacing: 0;
}

.photovoltaic_title {
    padding: 0 100rpx 120rpx 90rpx;
    font-family: SourceHanSansSC-Regular;
    font-size: 26rpx;
    color: #FFFFFF;
    text-align: justify;
    line-height: 40rpx;
}

.list {
    margin: 1.5%;
    width: 97%;
    height: 600rpx;
    background-repeat: no-repeat;
    background-size: 100% 100%;
    -moz-background-size: 100% 100%;
}

.list_title {
    padding-top: 30rpx;
    padding-left: 120rpx;
    padding-bottom: 50rpx;
    font-family: SourceHanSansSC-Medium;
    font-size: 32rpx;
    color: #FFFFFF;
    text-align: justify;
}

.list_content {
    padding: 0rpx 50rpx 20rpx;
}

.content {
    padding-top: 9rpx;
    display: flex;
    justify-content: flex-start;
    align-items: flex-start;
}

.content .cont {
    font-family: SourceHanSansSC-Medium;
    font-size: 28rpx;
    color: #3D3D3D;
    text-align: justify;
}

.content .img {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 44rpx;
}

.triangle {
    width: 17rpx;
    height: 15rpx;
    margin-right: 10rpx;
}

.content .cont1 {
    font-family: SourceHanSansSC-Regular;
    font-size: 26rpx;
    color: #3D3D3D;
    text-align: justify;
    line-height: 44rpx;
}

.content .spec {
    margin-left: 25rpx;
}

.bottom_btn {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 145rpx;
    background: #FFFFFF;
    box-shadow: 0 0 10rpx 0 rgba(0, 8, 79, 0.15);
    border-radius: 24rpx 24rpx 0 0;
    display: flex;
    justify-content: space-around;
    align-items: center;
}

.share-btn {
    border: 1rpx solid #2785FF;
    border-radius: 44rpx;
    width: 170rpx;
    height: 88rpx;
    display: flex;
    justify-content: space-around;
    align-items: center;
}

.share-btn image {
    width: 38rpx;
}

.share_text {
    font-family: SourceHanSansCN-Medium;
    font-size: 34rpx;
    color: #2785FF;
    letter-spacing: 0;
    text-align: center;
}

.btn1 {
    background-image: linear-gradient(106deg, #0A92FC 9%, #0459F8 100%);
    border-radius: 41rpx;
    font-family: SourceHanSansCN-Medium;
    font-size: 34rpx;
    color: #FFFFFF;
    letter-spacing: 0;
    text-align: center;
    width: 500rpx;
    height: 88rpx;
}