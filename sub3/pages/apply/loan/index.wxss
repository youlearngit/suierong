  border-radius: 18px;
  box-shadow: 0 2px 24px 0 rgba(156,187,255,0.56);
}
.weui-cell{
  width: 96%;
}
.weui-label{
  font-family: SourceHanSansSC-Regular;
  font-size: 28rpx;
  color: #333333;
  letter-spacing: 0;
}
input{
  text-align: right;
}

.apply-btn{
  width: 580rpx;
  height: 80rpx;
  font-size: 30rpx;
  text-align: center;
  background:linear-gradient(to bottom, #8BA2FD,#3D5FE9);
  border-radius: 50rpx;
  color: #ffffff;
  margin: 80rpx 70rpx 20rpx 70rpx;
}
.next-info{
  font-family: SourceHanSansSC-Regular;
  font-size: 26rpx;
  color: #B1B2BD;
  letter-spacing: 0.4px;
  text-align: center;
  margin-bottom: 40rpx;
  font-weight: 300;
}
.input-adjust{
  margin-left: 25rpx;
  margin-bottom: 30rpx;
  padding: 0rpx 20rpx;
  line-height: 85rpx;
  text-align: left;
  background-color: red;
  width: 665rpx;
  height: 85rpx;
  background: #F7FBFF;
  border: 1px solid #D2DDFF;
  border-radius: 8px;
}
.picker-1{
  height: 800rpx;
  width: 750rpx;
  overflow: scroll;
  background-color: red;
  position:fixed;
  top:43%;
