page {
  background-color: #f6fbfe;
  overflow: scroll
}
.body-background-img{
  width: 100%;
  height: 100%;
  background-size: 120%;
  background-position-y: -140rpx;
  padding: 60rpx 20rpx 0rpx 20rpx ;
}

.top{
  height: 280rpx;
}
.top-left{
  height: 100%;
  width: 300rpx;
  float: left;
}
.top-right-img{
  width: 98rpx;
  height: 42rpx;
}
.top-right-text1{
  position: relative;
  left: -0rpx;
  top: -14rpx;
  font-family: SourceHanSansSC-Medium;
  font-size: 24rpx;
  color: #333333;
}
.top-right-text2{
  font-family: SourceHanSansSC-Regular;
  font-size: 26rpx;
  margin-top: -130rpx;
  color: #333333;
