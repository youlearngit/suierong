<view class="body-background-img" style="background-image: url({{preffixUrl}}/static/wechat/img/carloans/confirm_home_background.png);">
  <view class="top">
      <text class="top-title">个人住房贷款</text>
      <view>
        <view class="top-label">
        <image class="f2-1-img" src="{{preffixUrl}}/static/wechat/img/carloans/car-home-gou.png" mode="aspectFit"></image>
       <view class="f2-1-text">线上申请</view>
      </view>
      <view class="top-label">
        <image class="f2-1-img" src="{{preffixUrl}}/static/wechat/img/carloans/car-home-gou.png" mode="aspectFit"></image>
       <view class="f2-1-text">快速响应</view>
      </view>
      <view class="top-label">
        <image class="f2-1-img" src="{{preffixUrl}}/static/wechat/img/carloans/car-home-gou.png" mode="aspectFit"></image>
       <view class="f2-1-text">专属服务</view>
      </view>
      </view>
  </view>
  <view class="form"> 
    <form bindsubmit="nextStep" report-submit='true'>
      <view class="section pr">
        <!-- 房贷申请产品 -->
        <view class="weui-cell weui-cell_input" style="padding-right:18rpx">
          <view class="weui-cell__hd">
              <view class="weui-label cGray"><text class="font-red">*</text> 房贷申请产品</view>
          </view>
          <view class="weui-cell__bd">
              <picker mode="multiSelector"
                  bindchange="productProfession" 
                  value="{{productIndex}}" 
                  range="{{productArray}}" 
                  range-key="name">
                  <input type="text" 
                          placeholder="请选择产品"
                          placeholder-class="placeholder" 
                          disabled="{{true}}" 
                          value="{{product}}"/>
              </picker>
          </view>
        </view>
        <!-- 房贷申请金额 -->
        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
              <view class="weui-label cGray"><text class="font-red">*</text> 房贷申请金额</view>
          </view>
          <view class="weui-cell__bd" style="padding-right: 30rpx;">
              <input name="name" id="name" placeholder="请输入金额" 
              bindinput='inputCarApplyAmount'  type="number"
              value="{{ form.carApplyAmount }}"/>
              <text class="company_spec">元</text>
          </view>
        </view>
        <!-- 房贷申请期限 -->
        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
              <view class="weui-label cGray"><text class="font-red">*</text> 房贷申请期限</view>
          </view>
          <view class="weui-cell__bd" style="padding-right: 30rpx;">
              <input name="name" id="name" placeholder="请输入期限" 
              bindinput='inputCarApplyMonth'  type="number" maxlength="3"
              value="{{ form.carApplyMonth }}"/>
              <text class="company_spec">月</text>
          </view>
        </view>
        <!-- 购买总价 -->
        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
              <view><text class="font-red">*</text> 购买总价</view>
          </view>
          <view class="weui-cell__bd" style="padding-right: 30rpx;">
              <input name="name" id="name" placeholder="请输入金额" 
              bindinput='inputSuiEApplyAmount'  type="number" 
              value="{{ form.suiEApplyAmount }}"/>
              <text class="company_spec">元</text>
          </view>
        </view>
        <!-- 首付比例 -->
        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
              <view><text class="font-red">*</text> 首付比例</view>
          </view>
          <view class="weui-cell__bd" style="padding-right: 30rpx;">
              <input name="name" id="name" placeholder="请输入比例"  
              bindinput='inputSuiEApplyMonth' type="digit" maxlength="5" disabled
              value="{{ form.suiEApplyMonth }}"/>
              <text class="company_spec">%</text>
          </view>
        </view>
        <!-- 拟购房地址 -->
        <view class="weui-cell weui-cell_input">
            <view class="weui-cell__hd">
                <view class="weui-label cGray"><text class="font-red">*</text> 拟购房地址</view>
            </view>
        </view>
        <view>
            <input class="input-adjust" 
                    placeholder="请输入拟购房地址" 
                    name="purchase_address"
                    id="purchase_address"
                    type="name" 
                    bindblur='inputCompanyName'
                    value="{{ form.purchase_address }}"/>
        </view>
         <!-- 经办客户经理工号 -->
         <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
              <view class="weui-label cGray">经办客户经理工号</view>
          </view>
          <view class="weui-cell__bd">
              <input name="name" id="name" placeholder="请输入经办客户经理工号" 
              bindinput='inputChargeOrgId'  maxlength="40"
              value="{{ form.chargeOrgId }}"/>
          </view>
        </view>
        <!-- 手机号码 -->
        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
              <view class="weui-label cGray"><text class="font-red">*</text> 手机号码</view>
          </view>
          <view class="weui-cell__bd">
              <input name="name" id="name" placeholder="请输入手机号码" 
              bindinput='inputTel'  type="number" maxlength="11"
              value="{{ form.tel }}"/>
          </view>
        </view>
        <!-- 短信验证码 -->
        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__bd" style="padding-right: 30rpx;text-align: left;">
              <input name="name" id="name" placeholder="请输入短信验证码"
              bindinput='inputSmsCode'  type="number" maxlength="6"
              value="{{ smsCode }}"/>
          </view>
          <view class="weui-cell__hd">
              <text class="sms-code" disabled='{{disabled}}'
              bindtap="getVerificationCode">{{codename}}
              </text>
          </view>
        </view>
      </view>
    </form>
  </view>

  <view class="foot">
    <view>
      <view class="action-text">
        <label class="radio">
          <radio disabled='{{true}}' color="#09BB07" bindtouchend="seeCont" checked="{{btnFlag}}"/> 
        </label>
          您已阅读并同意以下协议所载内容和条款<text class="action-text-content" bindtap="openAction">《综合信息查询使用授权书》、《征信查询授权书》等。</text>
      </view>
    </view>
    <button class="btn-submit" bindtap="goSubmit" style="{{btnFlag?'':'opacity: 0.5;'}}">提交申请</button>
  </view>
</view>

