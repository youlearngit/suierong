@import "/assets/styles/weui.wxss";
@import "/assets/styles/colorui/main.wxss";
@import "/assets/styles/colorui/animation.wxss";
@import "/assets/styles/colorui/icon.wxss";

page{
  overflow:hidden;
  background-color: #ffffff;
}
.body{
  width: 100%;
  height: 100%;
  z-index: -2;
  background-size:100% 100%;
  padding-top: 50rpx;
  padding-left: 60rpx;
  background-color: #ffffff;
  text-align: center;
}
.card{
  width: 630rpx;
  margin-bottom: 60rpx;
  box-shadow: 0 2px 24px 0 rgba(156,187,255,0.56);
}
.info-background {
  width: 570rpx;
  height: 529rpx;
  margin-left: 30rpx;
  padding-top: 15rpx;
  background: #F7FBFF;
  border-radius: 10px;
}
.card-top{
  padding-top: 106rpx;
  text-align: center;
  background-color: #ffffff;
  border-radius: 25rpx 25rpx 0 0;
}
.result-success-img{
  width: 200rpx;
  height: 193rpx;
  background-size:100% 100%;
  margin-left: 217rpx;
  margin-bottom: 24rpx;
}
.reulst-success-text1{
  font-family: SourceHanSansCN-Medium;
  font-size: 34rpx;
  color: #1C294F;
  letter-spacing: 0;
  margin-bottom: 32rpx;
}
.reulst-success-text2{
  font-family: SourceHanSansCN-Regular;
  font-size: 28rpx;
  color: #1C294F;
  letter-spacing: 12rpx;
}
.card-split{
  width: 630rpx;
  height: 53rpx;
  background-size: 101% 100%;
}
.card-foot{
  padding-bottom: 40rpx;
  background-color: #ffffff;
  border-radius: 0rpx 0rpx 25rpx 25rpx;
}
.info-text-bord{
  padding-left: 30rpx;
  text-align: left;
}
.info-title{
  font-family: SourceHanSansCN-Medium;
  font-size: 28rpx;
  color: #D89451;
  letter-spacing: 0;
  text-align: justify;
  margin: 18rpx 0 24rpx 30rpx;
}
.info-text{
  font-family: SourceHanSansCN-Regular;
  font-size: 26rpx;
  color: #6B738C;
  letter-spacing: 0;
  text-align: left;
  line-height: 48rpx;

}
.info-text-sub{
  font-family: SourceHanSansCN-Regular;
  font-weight: 100;
  font-size: 24rpx;
  color: #000000;
  text-align: left;
  line-height: 42rpx;
}
.btn{
  width: 440rpx;
  height: 86rpx;
  line-height: 86rpx;
  background-image: linear-gradient(0deg, #1677FF 0%, #7CB2FF 100%);
  border-radius: 43px;
  font-family: SourceHanSansCN-Regular;
  font-size: 34rpx;
}