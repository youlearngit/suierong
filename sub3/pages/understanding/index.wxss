/* pages/carLoans/understanding/index.wxss */
@import "/assets/styles/weui.wxss";
@import "/assets/styles/colorui/main.wxss";
@import "/assets/styles/colorui/animation.wxss";
@import "/assets/styles/colorui/icon.wxss";
page {
  /* background-color: rgb(98 132 252); */
  background-color: #6787fcfa;
  overflow: scroll;
}
.body-background-img{
  width: 100%;
  height: 100%;
  background-repeat:no-repeat;
  background-size: 100%;
  background-position-y: -100rpx;
  padding: 60rpx 20rpx 0rpx 20rpx ;
}

.swiper-tab{
  text-align: center;
  margin-top: 370rpx;
  width: 100%;
  height: 80rpx;
}
.swiper-tab-list{  
  display: inline-block;
  width: 33.33%;
  height: 100%;
  position: relative;
  z-index: 4;
}
.swiper-tab-image{
  width: 216rpx;
  height: 100%;
  position: relative;
  z-index: 0;
}
.swiper-box{ 
  width: 100%; 
  padding: 15rpx;
} 

.swiper-item-1{
  border-radius: 13rpx;
  background-color: #ffffff;
}
.swiper-item-2{
  border-radius: 13rpx;
  background-color: #ffffff;
}
.swiper-item-3{
  border-radius: 13rpx;
  background-color: #ffffff;
}
.angle-image{
  width: 12rpx;
  height: 12rpx;
  position:fixed;
}
.angle-image-top-left{
  left: 10rpx;
  top: 10rpx;
}
.angle-image-top-right{
  right: 10rpx;
  top: 10rpx;
}
.angle-image-bottom-left{
  left: 10rpx;
  bottom: 10rpx;
}
.angle-image-bottom-right{
  right: 10rpx;
  bottom: 10rpx;
}
.card-title{
  text-align: center;
  margin-top: 30rpx;
}
.title-img{
width: 126rpx;
height: 17rpx;
}
.title-center-text{
  font-family: SourceHanSansSC-Bold;
  font-size: 36rpx;
  color: #BE9661 ;
  letter-spacing: 0;
  margin: 0rpx 20rpx ;
}
.card-content-text{
  margin: 20rpx 30rpx ;
  font-family: SourceHanSansSC-Medium;
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  text-align: justify;
  line-height: 43rpx;
}
.card-foot{
  padding: 20rpx 0rpx 20rpx 30rpx;
}
.card-foot-img-1{
  width: 154rpx;
  height: 234rpx;
}
.card-foot-img-2{
  width: 84rpx;
  height: 3rpx;
  top: -130rpx;
}
.card-foot-text{
  font-family: SourceHanSansSC-Regular;
  font-size: 26rpx;
  color: #4E66BF;
  letter-spacing: 0;
  text-align: center;
}
.card-01{
  padding: 0rpx 20rpx 30rpx 20rpx;
  width: 630rpx;
  margin: 30rpx;
  background: #f4f7fe;
  background-repeat: no-repeat;
  background-position-x: 100%;
  background-position-y: 100%;
  background-size: 25%;
}
.card-01-text{
  font-family: SourceHanSansSC-Regular;
font-size: 26rpx;
color: #444E77;
text-align: justify;
line-height: 40rpx;
}
.card-label{
  width: 191rpx;
  height: 57rpx;
  line-height: 57rpx;
  padding-left: 10rpx;
  background-image: linear-gradient(212deg, #FFD48E 0%, #BE9661 100%);
  box-shadow: 0 2rpx 10rpx 0 rgba(239,180,95,0.27);
  border-radius: 4rpx;
  border-radius: 4rpx;
  position:relative;
  left: -30rpx;
  top: -20rpx;
}
.card-label-num{
  opacity: 0.6;
  font-family: STHeitiSC-Medium;
  font-size: 30rpx;
  color: #FFFFFF;
  letter-spacing: 0;
  text-align: center;
  margin-right: 10rpx;
}
.card-label-text{
  font-family: SourceHanSansSC-Medium;
  font-size: 30rpx;
  color: #FFFFFF;
  text-align: justify;
}

/*随便抄的*/
.content {
  padding: 15rpx 15rpx 0 15rpx;
  font-size: 30rpx;
  color: #808080;
}

.list-content {
  margin: 0rpx 20rpx ;
  justify-content: space-between;
  text-align: center;
  line-height: 60rpx;
  border-bottom: 1rpx dashed #ddd;
}

.list-text {
  margin: 0rpx 0rpx 20rpx 0rpx;
  padding: 15rpx;
  font-family: SourceHanSansSC-Regular;
  font-size: 26rpx;
  color: #808EC6;
  line-height: 40rpx;
  text-align: justify;
  background: #f1f4fd;
  border-radius: 16px;
}

.hidden-content {
  display: none;
}
.list-content-name{
  font-family: SourceHanSansSC-Regular;
  font-size: 26rpx;
  color: #444E77;
  text-align: justify;
}
.list-content-name-img{
  width: 36rpx;
  height: 34rpx;
  margin-top: 10rpx;
  margin-right: 15rpx;
  position: relative;
  top: 5rpx;
}