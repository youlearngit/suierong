/* sub3/pages/salary/index.wxss */
page {
  background: #f6f7f8;
}
.salary-list {
  width: 100%;
  background: #f6f7f8;
  border-radius: 18rpx;
  /* margin-top: -100rpx; */
  padding: 0 30rpx;
  position: absolute;
  top: 270rpx;
  box-sizing: border-box;
}

.calendar-box {
  width: 166rpx;
  height: 48rpx;
  line-height: 48rpx;
  font-family: SourceHanSansSC-Regular;
  font-size: 26rpx;
  color: #2c3750;
  background: #ffffff;
  border: 1rpx solid #e4e4e4;
  border-radius: 24rpx;
  text-align: center;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 30rpx 0;
}
.arrow {
  width: 0;
  height: 0;
  border: 10rpx solid transparent;
  border-top: 12rpx solid #2c3750;
  margin-left: 10rpx;
  margin-top: 12rpx;
}

.salary-month {
  margin-bottom: 30rpx;
}

.s-title {
  padding-left: 30rpx;
  position: relative;
  font-family: SourceHanSansSC-Medium;
  font-size: 30rpx;
  color: #2c3750;
  margin-bottom: 20rpx;
}
.s-title::before {
  content: ' ';
  position: absolute;
  width: 8rpx;
  height: 26rpx;
  background: #ff9f52;
  border-radius: 4rpx;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
}
.s-detail {
  background: #ffffff;
  border: 1rpx solid #e4e4e4;
  border-radius: 12rpx;
}

.s-detail-item {
  box-sizing: border-box;
  padding: 26rpx 0;
  margin: 0 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #e7e7ef;
  height: 125rpx;
}

.s-detail-item:last-child {
  border-bottom: 1rpx solid #ffffff;
}

.s-detail-title {
  font-family: SourceHanSansSC-Regular;
  font-size: 28rpx;
  color: #3d4960;
}
.s-detail-time {
  font-family: SourceHanSansSC-Regular;
  font-size: 24rpx;
  color: #b3b5c7;
}
.s-detail-number {
  font-family: DIN-Medium;
  font-size: 32rpx;
  color: #2c3750;
  position: relative;
  padding-right: 33rpx;
}
.s-detail-number::after {
  content: ' ';
  position: absolute;
  width: 13rpx;
  height: 13rpx;
  border: 4rpx solid #b3b5c7;
  border-top: transparent;
  border-left: transparent;
  right: 0;
  top: 50%;
  transform: translateY(-50%) rotate(-45deg) ;
}
.ddialog {
  overflow-y: auto;
  text-align: center;
  -webkit-overflow-scrolling: touch;
  font-size: 14rpx;
  line-height: 20rpx;
  max-height: 60vh;
  padding: 24rpx;
  padding-top: 8rpx;
  color: #646566;
}
.s-detail-title2 {
  font-family: SourceHanSansSC-Regular;
  font-size: 24rpx;
color: #B3B5C7;
letter-spacing: 0;
margin-left: 42rpx;
}
.s-detail-company {
  font-family: SourceHanSansSC-Regular;
  font-size: 28rpx;
  color: #2C3750;
  letter-spacing: 0;
  line-height: 40rpx;
  padding-left: 12rpx;
  overflow: hidden;
  width: 455rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-top: 5rpx;
}
.s-detail-left {
  font-family: SourceHanSansSC-Regular;
}
.s-detail-middle {
  font-family: SourceHanSansSC-Regular;
  display: flex;
}
.s-detail-icon{
  margin-top: 5rpx;
}