/* sub3/pages/upgrade/index.wxss */
.bg {
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
}
.share {
  width: 40rpx;
  position: absolute;
  right: 30rpx;
  top: 30rpx;
}
.footer {
  width: 100%;
  height: 284rpx;
  background: #ffffff;
  box-shadow: 0 -8rpx 12rpx 0 rgba(216, 226, 255, 0.17);
  border-radius: 26rpx 26rpx 0 0;
  position: fixed;
  left: 0;
  bottom: 0;
  text-align: center;
  box-sizing: border-box;
  padding: 48rpx 0 60rpx;
}

.title {
  font-family: SourceHanSansSC-Regular;
  font-size: 34rpx;
  color: #3d4960;
  letter-spacing: 0;
  text-align: center;
  margin: 0 auto 46rpx;
}

.btn-box {
  width: 100%;
  display: flex;
  justify-content: space-evenly;
}

.cancel {
  width: 216rpx;
  height: 78rpx;
  line-height: 78rpx;
  background: #ffffff;
  border: 1rpx solid rgba(102, 139, 250, 0.86);
  border-radius: 43rpx;
  font-family: SourceHanSansCN-Normal;
  font-size: 32rpx;
  color: #6389f9;
}

.confirm {
  width: 420rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-image: linear-gradient(140deg, #7b97ff 0%, #5f87f8 100%);
  border-radius: 43rpx;
  font-family: SourceHanSansCN-Normal;
  font-size: 32rpx;
  color: #ffffff;
}

.company-box {
  width: 690rpx;
  position: absolute;
  top: 457rpx;
  left: 40rpx;
}

.org-code {
  opacity: 0.8;
  font-family: SourceHanSansSC-Normal;
  margin: 20rpx 0;
  font-size: 30rpx;
  color: #ffffff;
}

.a2b1 {
  width: 100%;
  background: #ffffff;
  border-radius: 12rpx;
  display: flex;
  justify-content: space-between;
  padding: 39rpx 30rpx;
  box-sizing: border-box;
}

.a2b1c1,
.van-cell__title {
  font-family: SourceHanSansSC-Normal;
  font-size: 30rpx;
  color: #3d4960;
}

.input-placeholder {
  opacity: 0.7;
  font-family: SourceHanSansCN-Regular;
  font-size: 30rpx;
  color: #a5abbb;
  letter-spacing: 0;
  text-align: right;
}

.a2b1c2 {
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #999999;
  letter-spacing: 0;
  text-align: right;
  line-height: 30rpx;
}

.a2b1c3 {
  width: 450rpx;
  text-align: right;
  position: relative;
  display: block;
}

.enter-list {
  width: 460rpx;
  /* height: 300rpx; */
  max-height: 300rpx;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #041733;
  position: absolute;
  margin: 30rpx 0;
  box-shadow: 0rpx 8rpx 16rpx 0rpx rgba(0, 0, 0, 0.2);
  z-index: 9;
  background: white;
  border-radius: 10rpx;
  overflow: hidden;
  right: -30rpx;
}

.m1 {
  width: 100%;
  padding: 10rpx 15rpx;
  text-align: right;
  background-color: white;
  font-size: 26rpx;
  color: #041733;
  overflow: hidden;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  box-sizing: border-box;
  /* border: 1rpx solid red; */
}

button {
  padding-left: 0;
  padding-right: 0;
  line-height: 0;
}
button::after {
  border: none;
}
button[plain] {
  border: none;
}
