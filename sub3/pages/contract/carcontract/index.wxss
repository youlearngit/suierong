}
.card-content-label{
  font-size: 26rpx;
  color: #7C8BA4;
  letter-spacing: 0;
}
.card-content-value{
  font-size: 28rpx;
  color: #333333;
  letter-spacing: 0;
}
.b4041{
  margin: 32%;
  width: 300rpx;
}
.item-top-right-img{
