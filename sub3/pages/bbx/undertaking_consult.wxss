page {
	background: rgba(68,78,143,1);
}
.bg {
	z-index: -1;
	position: fixed;
    top: 0;
    left: 0;
	width: 100%;
}
.panel {
	padding-bottom: 55rpx;
}
.title {
	padding: 55rpx 30rpx 35rpx 30rpx;
}
.title view:nth-child(1){
	font-size: 40rpx;
	color: #FFDCBB;
	font-weight: 700;
}
.title view:nth-child(2) {
	font-size: 28rpx;
	color: rgba(255,216,177,0.75);
	font-weight: 400;
}
.staffs-title {
	padding: 20rpx 0 0 30rpx;
	font-size: 30rpx;
	color: #FFFFFF;
}
.staff {
	position: relative;
	margin: 20rpx 30rpx;
	border-radius: 10rpx;
}
.staff-bg {
	width: 690rpx;
	height: 266rpx;
}
.staff-body {
	position: absolute;
	top: 0;
	left: 0;
	width: 690rpx;
	padding: 50rpx 30rpx 20rpx 30rpx;
	box-sizing: border-box;
}
.staff-inline {
	display: flex;
}
.staff-avatar {
	width: 110rpx;
	height: 110rpx;
	margin-right: 20rpx;
}
.staff-name {
	margin-top: 12rpx;
	display: flex;
	align-items: center;
	font-size: 30rpx;
	color: #1C294F;
}
.staff-job {
	margin-left: 16rpx;
	min-height: 64rpx;
	max-width: 330rpx;
	font-size: 24rpx;
	color: #5D6F9F;
}
.staff-tags {
	margin-top: 15rpx;
	display: flex;
}
.staff-tags view {
	margin-right: 10rpx;
	padding: 8rpx;
	background: #FFF0E1;
	border-radius: 6rpx;
	font-size: 24rpx;
	color: #AC7E55;
}
.staff-remark {
	margin-top: 17rpx;
	font-size: 24rpx;
	color: #999999;
	overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
}
.staff-phone {
	position: absolute;
	top: 36rpx;
	right: 20rpx;
	width: 38rpx;
	height: 39rpx;
}