
page {
	background-color: rgb(105, 143, 244);
}

.bg {
	width: 100%;
}
  
.card {
	position: relative;
	margin: 0 30rpx;
}
.card-bg {
	width: 690rpx;
	height: 286rpx;
}
.card-body {
    position: absolute;
    top: 0;
	left: 0;
	padding: 49rpx 30rpx 19rpx 30rpx;
}
.card-avatar {
	width: 110rpx;
	height: 110rpx;
	margin-right: 30rpx;
}
.card-inline {
	display: flex;
}
.card-name {
	margin-top: 13rpx;
	line-height: 30rpx;
	font-size: 30rpx;
	color: #1C294F;
	display: flex;
    align-items: center;
}
.card-staffname {
	white-space: nowrap;
}
.card-job {
	margin-left: 16rpx;
	min-height: 58rpx;
	max-width: 335rpx;
	font-size: 24rpx;
	color: #5D6F9F;
}
.card-tags view {
	margin-top: 15rpx;
	margin-right: 8rpx;
	padding: 8rpx;
	background: #F1F4FF;
	border-radius: 6rpx;
	font-size: 24rpx;
	color: #4773FE;
	line-height: 24rpx;
}
.card-remark {
	margin-top: 12rpx;
	min-width: 600rpx;
    min-height: 65rpx;
	border: 14rpx solid transparent;
	background: rgba(231,237,255,0.82);
	border-radius: 6rpx;
	font-size: 26rpx;
	color: #5D6F9F;
	overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
}
.card-contact {
	position: absolute;
	top: 22rpx;
	right: 24rpx;
	width: 38rpx;
	height: 38rpx;
}
