
.bg {
	width: 100%;
}

.plane {
	padding: 30rpx;
}
.illustration {
	margin: 50rpx 0;
	text-align: center;
}
.illustration-img {
	width: 293rpx;
	height: 229rpx;
}
.illustration-tip {
	margin-top: 9rpx;
	font-size: 28rpx;
	color: rgba(28,41,79,0.41);
}
.title {
	margin: 8rpx 0;
	width: 315rpx;
	height: 58rpx;
	background: rgba(226,242,255,0.5);
	border-radius: 100rpx 29rpx 29rpx 100rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	font-size: 28rpx;
	color: #2B7FEE;
}
.title-phone {
	margin-right: 10rpx;
	width: 21rpx;
	height: 30rpx;
}
.steps {
	padding-left: 40rpx;
	font-size: 26rpx;
	color: #1C294F;
}
.steps view {
	position: relative;
	padding: 25rpx 20rpx;
	line-height: 44rpx;
}
.steps view:before {
	content: '';
	position: absolute;
	left: 0;
	top: 64rpx;
	bottom: -22rpx;
	width: 2rpx;
	background: #2B7FEE;
}
.steps view:nth-last-child(1):before {
	height: 0;
}
.steps image {
	width: 26rpx;
	height: 26rpx;
	position: absolute;
	left: -12rpx;
	top: 32rpx;
}
.remark {
	padding: 15rpx 20rpx;
	background: #F6F8FF;
	border: 1rpx solid rgba(115,124,149,0.23);
	border-radius: 4rpx;
	font-size: 24rpx;
	color: rgba(28,41,79,0.4);
	line-height: 32rpx;
}
.remark view:nth-child(1) {
	color: rgba(28,41,79,0.6);
}
