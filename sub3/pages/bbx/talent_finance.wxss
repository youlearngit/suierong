  .card {
	width: 100%;
	height: 286rpx;
	margin: 30rpx auto 0;
	position: relative;
	padding: 60rpx 20rpx 30rpx;
	box-sizing: border-box;
	border-radius: 12rpx;
  }
  .card__bg {
	width: 100%;
	position: absolute;
	top: 0;
	left: 0;
	
  }
  .card-desc {
	width: 100%;
	min-height: 75rpx;
	opacity: 0.82;
	background: #e7edff;
	border-radius: 6rpx;
	box-sizing: border-box;
	padding: 13rpx 20rpx 8rpx;
