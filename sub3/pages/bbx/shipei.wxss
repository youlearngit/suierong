.bg {
	position: fixed;
	width: 100%;
	height: 100%;
    top: 0;
    left: 0;
    z-index: -1;
}
.popup {
	position: relative;
}
.popup-bg {
	width: 690rpx;
}
.popup-content {
	z-index: 0;
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	box-sizing: border-box;
}
.popup-head {
	padding: 30rpx;
	display: flex;
	align-items: center;
	font-size: 40rpx;
	color: #1C294F;
}
.popup-head span {
	opacity: 0.5;
	font-size: 30rpx;
	color: #1C294F;
}
.popup-icon {
	width: 64rpx;
	height: 64rpx;
	margin-right: 20rpx;
}
.popup-idx {
	position: absolute;
    right: 0;
	top: 42rpx;
	width: 80rpx;
	height: 56rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	font-size: 28rpx;
	color: #FFFFFF;
}
.popup-idx image {
	z-index: -1;
	position: absolute;
	top: 0;
	right: 0;
	width: 80rpx;
	height: 56rpx;
}
.popup-close {
	width: 32rpx;
	margin: 0 0 auto auto;
}
.popup-body {
	height: 300rpx;
	overflow-x: hidden;
    overflow-y: scroll;
    display: flex;
    justify-content: center;
	align-items: center;
	flex-wrap: wrap;
	font-size: 30rpx;
	color: #1C294F;
}
.popup-body view {
	margin: 15rpx;
	padding: 20rpx 40rpx;
	border-radius: 40rpx;
	background: #F5F6FC;
}
.popup-body .activity {
	background: #446DFF;
	color: #FFFFFF;
}
.activity-multi {
	position: relative;
	border: 2rpx solid #446DFF;
	color: #446DFF;
}
.activity-multi image {
	position: absolute;
    top: -20rpx;
    right: -10rpx;
	width: 40rpx;
	height: 40rpx;
}
.popup-bottom {
	padding: 40rpx;
	display: flex;
	justify-content: center;
	align-items: center;
}
.popup-bottom button {
	width: 310rpx;
	height: 80rpx;
	background: #446DFF;
	border-radius: 44rpx;
	display: flex;
	justify-content: center;
	align-items: center;
	font-size: 30rpx;
	color: #FFFFFF;
}
.bottom {
	position: fixed;
	width: 100%;
    bottom: 0;
    left: 0;
}
.bottom input {
	height: 80rpx;
	padding: 0px 20rpx;
	box-shadow: 0 2rpx 12rpx 0 rgba(126,152,195,0.15);
	border-radius: 40rpx;
	background-color: #FFFFFF;
	font-size: 28rpx;
	margin: 10rpx 30rpx 28rpx 30rpx;
}
.input-placeholder {
	font-size: 30rpx;
	color: rgba(28,41,79,0.3);
}
.input-send {
	position: absolute;
	top: 45rpx;
	right: 55rpx;
	color: rgba(28,41,79,0.3);
	z-index: 2;
}
.tips {
	padding: 10rpx;
	display: flex;
    justify-content: baseline;
    white-space: nowrap;
    overflow-y: hidden;
    overflow-x: scroll;
}
.tips image {
	width: 24rpx;
	height: 24rpx;
	margin-right: 9rpx;
}
.tips view {
	margin: 0 20rpx;
	padding: 10rpx 30rpx;
	background: #FFFFFF;
	box-shadow: 0 2rpx 12rpx 0 rgba(126,152,195,0.15);
	border-radius: 100rpx;
	display: flex;
	align-items: center;
	font-size: 30rpx;
	color: #1C294F;
}
.records {
	padding-bottom: 150rpx;
	height: 100vh;
}
.time {
	margin: 30rpx;
	font-size: 24rpx;
	color: #1C294F;
	text-align: center;
}
.record {
	margin: 30rpx;
	display: flex;
	align-items: center;
	font-size: 30rpx;
}
.record-content {
	max-width: 520rpx;
	padding: 18rpx 30rpx;
	box-sizing: border-box;
	display: flex;
}
.record-content image {
	width: 40rpx;
	margin-left: 16rpx;
}
.record-href {
	margin-left: 20rpx;
	display: flex;
	align-items: center;
	font-size: 26rpx;
	color: #446DFF;
}
.record-href image {
	width: 30rpx;
	height: 30rpx;
	margin-left: 10rpx;
}
.other {
    justify-content: flex-start;
}
.other .record-content {
	padding-right: 10rpx;
	box-shadow: 0 2rpx 12rpx 0 rgba(126,152,195,0.15);
	border-radius: 6rpx 20rpx 20rpx 48rpx;
	background: #FFFFFF;
	color: #1C294F;
}
.own {
    justify-content: flex-end;
}
.own .record-content {
	border-radius: 20rpx 6rpx 48rpx 20rpx;
	background: #446DFF;
	color: #FFFFFF;
}
.only-img {
	width: 690rpx;
	height: 250rpx;
}
.articles {
	position: relative;
	overflow-y: hidden;
	padding: 30rpx;
}
.articles-bg {
	width: 100%;
	height: 100%;
	position: absolute;
    top: 0;
    left: 0;
    z-index: -1;
}
.articles-title {
	font-size: 30rpx;
	color: #3E415C;
	display: flex;
    align-items: center;
}
.articles-title .icon {
	width: 10rpx;
	height: 36rpx;
	margin-right: 19rpx;
	background: #FFCA00;
	border-radius: 5rpx;
}
.articles-plane {
	width: 540rpx;
	padding: 0 20rpx;
	border-radius: 10rpx;
	box-sizing: border-box;
	background: #FFFFFF;
}
.article {
	padding: 20rpx 0;
	font-size: 28rpx;
	color: #3E415C;
}
.article-time {
	opacity: 0.3;
	font-size: 20rpx;
}

