
text {
	margin: 5px 0;
	display: block;
	font-size: 12px;
	text-overflow: ellipsis;
	white-space: nowrap;
	overflow: hidden;
}

.map_container {
	position: fixed;
	top: 0;
	height: 75%;
	left: 0;
	right: 0;
}
.map {
	width: 100%;
	height: 100%;
}
.map_search {
	position: fixed;
	top: 0;
	left: 0;
	width: 100%;
}
.map_search input {
	margin: 10rpx;
	height: 76rpx;
	padding-left: 72rpx;
	padding-right: 130rpx;
	background-color: #FFFFFF;
	box-shadow: 0 7rpx 20rpx 0 rgba(103,100,166,0.33);
	border-radius: 40rpx;
	box-sizing: border-box;
	font-size: 28rpx;
}
.map_search_icon {
	width: 32rpx;
	height: 32rpx;
	position: absolute;
    top: 34rpx;
    left: 36rpx;
}
.map_search_city {
	position: absolute;
	right: 30rpx;
	top: 0;
	height: 100%;
	display: flex;
	align-items: center;
	justify-items: center;
}
.map_search_city image {
	width: 20rpx;
	height: 24rpx;
	margin-right: 4rpx;
}
.map_search_list {
	z-index: -1;
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	background-color: #FFFFFF;
	padding-top: 100rpx;
	max-height: 400rpx;
	overflow: scroll;
}
.map_search_item {
	padding: 10rpx 20rpx;
}
.map_search_item view:nth-child(2) {
	color: #C5C5C5;
	font-size: 25rpx;
}

.map_boxs {
	position: fixed;
	top: 50%;
	right: 46rpx;
	z-index: 1000;
}
.map_box {
	margin-bottom: 20rpx;
	width: 70rpx;
	height: 70rpx;
	border-radius: 8rpx;
	background: #fff;
	box-shadow: 0 0 10rpx #333;
	text-align: center;
	font-size: 28rpx;
}
.map_poi::before {
	content: "定位";
	color: #999;
}
.map_poi image {
	margin: auto;
	width: 30rpx;
	height: 30rpx;
}

.map_text {
	position: absolute;
	left: 0;
	right: 0;
	bottom: 0px;
	height: 490rpx;
	overflow: scroll;
	padding: 0 15px;
	background: #fff;
}
.title {
	padding-bottom: 20rpx;
	padding-right: 150rpx;
	border-bottom: #eaeaea 1rpx solid;
	position: relative;
}
.title view:nth-child(1) {
	margin: 30rpx 0 15rpx;
	font-size: 32rpx;
	font-weight: 600;
}
.distance {
	line-height: 26rpx;
	font-size: 26rpx;
	color: #f1bb00;
}
.navto {
	position: absolute;
	width: 120rpx;
	top: 0;
	right: 0;
	text-align: center;
}
.navto image {
	width: 81rpx;
	height: 81rpx;
	vertical-align: middle;
}
.desc {
	margin: 20rpx 0;
}
.desc_line {
	font-size: 24rpx;
	line-height: 40rpx;
	color: #0068b6;
}
.desc_line .ico {
	display: inline-block;
	width: 20rpx;
	height: 20rpx;
	border-radius: 20rpx;
	background: #0068b6;
	margin-right: 10rpx;
}
.desc_gray {
	color: #999;
	line-height: 40rpx;
	font-size: 24rpx;
}
.desc_gray image {
	width: 20rpx;
	height: 24rpx;
	margin-right: 4rpx;
}

.staff {
	position: relative;
	margin: 10rpx 0;
	border-radius: 10rpx;
	padding: 30rpx 30rpx 20rpx 30rpx;
	box-shadow: 0 3px 14px 0 rgba(191, 193, 218, 0.4);
}
.staff-bg {
	z-index: -1;
	position: absolute;
	top: 0;
	left: 0;
	width: 690rpx;
	height: 266rpx;
}
.staff-inline {
	display: flex;
}
.staff-avatar {
	width: 110rpx;
	height: 110rpx;
	margin-right: 20rpx;
}
.staff-name {
	margin-top: 12rpx;
	display: flex;
	align-items: center;
	font-size: 30rpx;
	color: #1C294F;
}
.staff-job {
	min-height: 64rpx;
	margin-left: 16rpx;
	max-width: 330rpx;
	font-size: 24rpx;
	color: #5D6F9F;
}
.staff-tags {
	margin-top: 15rpx;
	display: flex;
}
.staff-tags view {
	margin-right: 10rpx;
	padding: 8rpx;
	background: #FFF0E1;
	border-radius: 6rpx;
	font-size: 24rpx;
	color: #AC7E55;
}
.staff-remark {
	margin-top: 17rpx;
	font-size: 24rpx;
	color: #999999;
	overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
}
.staff-phone {
	position: absolute;
	top: 36rpx;
	right: 20rpx;
	width: 38rpx;
	height: 39rpx;
}
