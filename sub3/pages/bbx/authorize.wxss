.bg {
	position: fixed;
	width: 100%;
	z-index: -1;
}
.logo {
	width: 100rpx;
	height: 100rpx;
	margin-top: 252rpx;
	margin-left: calc(50% - 50rpx);
}
.content {
	position: fixed;
	top: 500rpx;
	left: 0;
    height: 100%;
	background-image: linear-gradient(180deg, #FFFFFF 0%, #FFFFFF 100%);
	box-shadow: 0 -2rpx 24rpx 0 rgba(156,187,255,0.23);
	border-radius: 32rpx 32rpx 0 0;
	padding: 60rpx 80rpx;
	font-family: SourceHanSansSC-Regular;
	font-size: 28rpx;
	color: #3E415C;
	line-height: 42rpx;
}
.title {
	font-family: SourceHanSansSC-Medium;
	font-size: 38rpx;
	color: #3E415C;
	margin: 4rpx 0;
	font-weight: 600;
}
.wx {
	margin-top: 46rpx;
	background: #F5FBFF;
	border-radius: 12rpx;
	display: flex;
    padding: 20rpx 10rpx;
    align-items: center;
}
.wx_logo {
	width: 47rpx;
	height: 47rpx;
	margin: 0 20rpx;
}
.wx_tip {
	font-family: SourceHanSansSC-Regular;
	font-size: 24rpx;
	color: rgba(62,65,92,0.5);
}
.wx_tip view:nth-child(1) {
	font-family: SourceHanSansSC-Medium;
	font-size: 28rpx;
	color: #3E415C;
}
.btns {
	margin-top: 120rpx;
	display: flex;
}
.btns button:nth-child(1) {
	width: 224rpx;
	height: 84rpx;
	border: 1rpx solid #397FFF;
	border-radius: 42rpx;
	font-family: SourceHanSansSC-Medium;
	font-size: 32rpx;
	color: #397FFF;
}
.btns button:nth-child(2) {
	margin-left: 20rpx;
	width: 346rpx;
	height: 84rpx;
	background: #397FFF;
	border-radius: 42rpx;
	font-family: SourceHanSansSC-Medium;
	font-size: 32rpx;
	color: #FFFFFF;
}