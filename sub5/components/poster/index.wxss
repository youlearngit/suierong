.shareBox {
	position: fixed;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	z-index: -99;
	overflow: hidden;
}

.shareBox.on {
	z-index: 1000;
	background: rgba(0, 0, 0, 0.8);
}

.tools {
	position: absolute;
	left: 0;
	bottom: 30rpx;
	width: 100%;
	text-align: center;
	z-index: 9999;
}

.tools .tb {
	display: inline-block;
	width: 80rpx;
	height: 120rpx;
	margin: 0 30rpx;
	font-size: 26rpx;
	text-align: center;
	color: #fff;
}

.tools .tb image {
	display: block;
	width: 80rpx;
	height: 80rpx;
	border-radius: 80rpx;
	overflow: hidden;
	margin: auto;
}

.shareToAPP button {
	background: none;
	border: 0;
	outline: 0;
	padding: 0;
}

