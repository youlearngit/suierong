.listCon {
	width: 90%;
	margin: 40rpx auto;
}

.listBox,
.appliState {
	position: relative;
	margin-bottom: 40rpx;
	padding: 20rpx 0;
	box-shadow: 0 0 5px #ddd;
	background: #fff;
}

.listBox {
	padding-bottom: 0;
}

.state {
	position: absolute;
	top: -20rpx;
	left: 20rpx;
	display: inline-block;
	width: 120rpx;
	height: 38rpx;
	text-align: center;
	line-height: 38rpx;
	font-size: 24rpx;
	color: #fff;
}

.s1 {
	background: #0168b7;
}

.s2 {
	background: #f1bb00;
}

.s3 {
	background: #ec6941;
}

.listBoxTime {
	height: 85rpx;
	padding: 20rpx;
	border-bottom: #ddd 1rpx solid;
	font-size: 30rpx;
}

.applTime {
	float: left;
	display: inline-block;
	color: #575757;
}

.appMore {
	float: right;
	display: inline-block;
	color: #a4a4a4;
	color: #0168b7;
}

.listBoxBody {
	height: 140rpx;
	overflow: hidden;
}

.applName {
	display: inline-block;
	float: left;
	width: 45%;
	height: 140rpx;
	line-height: 120rpx;
	font-size: 34rpx;
	text-align: center;
	border-right: #ddd 1px solid;
}

.appNameIco {
	width: 143rpx;
	height: 54rpx;
	vertical-align: middle;
}

.applCon {
	float: left;
	width: 54%;
	height: 120rpx;
	text-align: center;
	color: #a4a4a4;
	font-size: 22rpx;
}

.applMoney {
	color: #f1bb00;
	font-size: 50rpx;
}

.nodata {
	width: 80%;
	margin: 60rpx auto;
	height: 20rpx;
	text-align: center;
	border-bottom: #d2d2d2 1rpx solid;
}

.nodata text {
	padding: 0 15rpx;
	background: #fff;
	color: #999;
}

.amount {
	margin-top: 15rpx;
	font-size: 26rpx;
}

