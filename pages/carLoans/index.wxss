  top: -36rpx;
  left: -660rpx;
}
.f3-4-1-text{
  font-weight: 500;
  font-size: 30rpx;
  position: relative;
  top: -85rpx;
  left: 100rpx;
}
.f3-4-2-text{
  position: relative;
  top: -80rpx;
  float: right;
  right: 60rpx;
  color: #8b97b8;
  font-size: 24rpx;  
}
