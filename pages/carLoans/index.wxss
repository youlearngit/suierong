/* 弹窗样式 */
.mask_layer {
    position: relative;
    width: 100%;
    height: 100%;
    position: fixed;
    z-index: 999;
    left: 0;
    top: 0;
    background-color: rgba(2, 1, 1, 0.4);
    opacity: 0.5;
    overflow: hidden;
    backdrop-filter: blur(100rpx);
}
.modal_box {
  width: 550rpx;
  height: 566rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 1001;
  background: #fafafa;
  margin: -300rpx 12% 0 12%;
  border-radius: 26rpx;
}
.card-img {
  width: 252rpx;
  height: 239rpx;
  top: 34rpx;
  left: 150rpx;
  z-index: -1;
}
.card-content {
  text-align: center;
}
.card-content-title{
  font-family: SourceHanSansSC-Medium;
  font-size: 34rpx;
}
.card-content-modalMsg {
  text-align: center;
  font-size: 28rpx;
  font-family: SourceHanSansSC-Regular;
  font-weight: 400;
  margin-top: 8rpx;
  display: block;
}
.card-btn {
  width: 100%;
  margin: 45rpx 0rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}
.popClose {
  width: 320rpx;
  height: 68rpx;
  padding: 13rpx;
  margin: 0rpx auto;
  font-size: 30rpx;
  font-family: PingFangSC-Regular;
  color: #ffffff;
  background-color:#3D5FE9;
  border-left: 2rpx solid #d0d0d0;
  text-align: center;
  border-radius: 50rpx;
}