@import '/sub1/pages/auth/index.wxss';
.setInfoBg{width:750rpx;height:122rpx;}
.infoBox{margin:30rpx;}
.weui-select{border-right:0;}
.weui-label{width:220rpx;padding-left:15rpx;font-size:30rpx;color:#000;}
.weui-label.cGray{color:#999;}
.section{padding:5rpx 20rpx;border-radius:10rpx;background:#fff;}
.weui-cells::before{border-top:0;margin-top:0}
.weui-cell::before{left:0;}
.codeBtn{padding:5rpx 15rpx;width:180rpx;font-size:24rpx;}


.weui-cells__title{margin-top:20px;color:#0066b3;font-size:16px;font-weight:700;padding:20rpx 0;margin:0;}
.weui-cells__title image{width:62rpx;height:57rpx;vertical-align:-webkit-baseline}
.weui-cells__title,.weui-cells__title image{vertical-align:middle}
.weui-cells__title text{display:inline-block;padding-left:10rpx;font-size:30rpx;padding-top:10rpx;vertical-align:middle;}
.weui-cell{padding:5px 0;}
.weui-cells{background:none;}
.weui-input,.weui-select{font-size:30rpx;}
.button-sp-area{margin-top:50rpx;text-align:center;}
.btn{display:inline-block;width:100%;height:100rpx;margin:0;border-radius:10rpx;text-align:center;line-height:100rpx;color:#fff;font-size:40rpx;border:none;background:linear-gradient(to left, rgba(240,168,0,0.3), rgba(234,150,3,1));overflow:hidden;}
.btn.blu{background:#008aed;}
.getwxPhone{position:absolute;right:10rpx;top:15rpx;display:inline-block;padding:10rpx 8rpx;font-size:20rpx;line-height:30rpx;}




