.apply {
	width: 100%;
	position: absolute;
	top: 1520rpx;
	display: flex;
	justify-content: center;
}

.btn1 {
	width: 300rpx;
	height: 80rpx;
	background-color: #ec1c24;
	color: white;
	font-size: 30rpx;
