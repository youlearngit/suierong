.popup {
	width: 550rpx;
    padding: 10rpx;
    position: relative;
}

.popup-title {
	width: 100%;
	height: 80rpx;
	text-align: center;
	line-height: 80rpx;
	font-size: 34rpx;
	color: black;
	border-bottom: #eeeeee 1rpx solid;
	margin: 0 0 12rpx;
}
.btn-cancel {
	width: 34rpx;
    position: absolute;
	top: 30rpx;
	right: 30rpx;
}
.popup-content {
	width: 100%;
	text-align: center;
	padding: 15rpx 0;
	font-size: 32rpx;
	color: #5d5e5e;
}

