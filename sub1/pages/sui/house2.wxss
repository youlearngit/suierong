/* sub1/pages/sui/house2.wxss */

Page {
	background-color: #f7fbff;
}

.a1 {
	width: 100%;
	height: 40rpx;
	padding: 60rpx 30rpx 20rpx;
	font-family: PingFangSC-Regular;
	font-size: 24rpx;
	color: #666666;
	letter-spacing: 0;
	position: relative;
}
.a1::after {
	content: " ";
	width: 6rpx;
	height: 40rpx;
	background: #4586e6;
	border-radius: 0 100rpx 100rpx 0;
	position: absolute;
	left: 0;
	top: 60rpx;
}

.a2 {
	width: 690rpx;
	height: 120rpx;
	margin: 20rpx auto;
	background: #ffffff;
	border: 1rpx solid #eef0f4;
	border-radius: 10rpx;
	line-height: 110rpx;
	display: flex;
	align-items: center;
	justify-content: space-between;
}

.a21 {
	font-family: PingFangSC-Medium;
	font-size: 30rpx;
	color: #333333;
	letter-spacing: 0;
	line-height: 30rpx;
	padding: 0 22rpx;
}

.a22 {
	padding: 0 22rpx;
	width: 62rpx;
}

.a3 {
	height: 81rpx;
	width: 451rpx;
	background: #1677ff;
	box-shadow: 0 3rpx 11rpx 0 rgba(115, 149, 255, 0.64);
	border-radius: 42rpx;
	/* position: fixed; */
	text-align: center;
	left: 150rpx;
	bottom: 60rpx;
	font-family: PingFangSC-Regular;
	font-size: 30rpx;
	color: #ffffff;
	letter-spacing: 0;
	line-height: 81rpx;
	margin: auto;
}

.van-checkbox {
	padding: 20rpx;
}

.van-checkbox__label {
	opacity: 0.6;
	font-family: PingFangSC-Regular;
	font-size: 26rpx;
	color: #041733;
	letter-spacing: 0;
}

.hname {
	font-size: 30rpx;
	color: #333333;
	margin: 10rpx 0;
}
.hprice {
	font-size: 27rpx;
	color: #333333;
}

.van-checkbox__icon-wrap {
	display: flex;
	align-items: center;
	padding: 0 20rpx;
}
.tip {
	font-family: PingFangSC-Medium;
	font-size: 26rpx;
	color: #464444;
	padding: 30rpx 35rpx;
}
