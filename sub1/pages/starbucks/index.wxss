.content {
  width: 100%;
}

.apply {
  width: 100%;
  position: absolute;
  top: 950rpx;
  display: flex;
  justify-content: center;
}

.btn1 {
  width: 254rpx;
  height: 75rpx;
  /* background-color: #ec1c24; */
  color: white;
  font-size: 30rpx;
  text-align: center;
  line-height: 75rpx;
  border-radius: 60rpx;
  margin: 0 15rpx;
}

.popup {
  width: 550rpx;
  padding: 10rpx;
  position: relative;
}

.popup-title {
  width: 100%;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 34rpx;
  color: black;
  border-bottom: #eeeeee 1rpx solid;
  margin: 0 0 12rpx;
}
.btn-cancel {
  width: 34rpx;
  position: absolute;
  top: 30rpx;
  right: 30rpx;
}
.popup-content {
  width: 100%;
  text-align: center;
  padding: 15rpx 0;
  font-size: 32rpx;
  color: #5d5e5e;
}

