page {
	background-image: linear-gradient(180deg, rgba(249, 252, 255, 0) 5%, #f8fbff 17%, #f0f8ff 100%);
	height: auto;
}
.container {
	width: 100%;
}
.bg1 {
	width: 100%;
	position: absolute;
	top: 0rpx;
}
.content {
	width: 690rpx;
	margin: 130rpx auto;
	background: #ffffff;
	border: 1rpx solid #eff3ff;
	box-shadow: 0 4rpx 16rpx 1rpx rgba(79, 145, 255, 0.2);
	/* padding: 30rpx; */
	border-radius: 20rpx;
	position: relative;
	overflow: hidden;
}
.title1 {
	width: 100%;
	margin: 30rpx 30rpx;
	display: flex;
	align-items: flex-end;
}
.title1 .icon {
	width: 44rpx;
}
.title1 .desc1 {
	opacity: 0.4;
	font-family: PingFangSC-Regular;
	font-size: 24rpx;
	color: #1c294f;
	margin: 0 10rpx;
}

.title1 .desc2 {
	font-family: PingFangSC-Medium;
	font-size: 34rpx;
	color: #1c294f;
}

.title2 {
	width: 100%;
	height: 60rpx;
	background-image: linear-gradient(270deg, rgba(238, 238, 238, 0) 0%, #507aff 100%);
	font-family: PingFangSC-Medium;
	font-size: 30rpx;
	color: #ffffff;
	line-height: 60rpx;
	padding: 0 30rpx;
}

.title3 {
	font-family: PingFangSC-Medium;
	font-size: 30rpx;
	color: #1c294f;
	padding: 30rpx;
	position: relative;
}

.title3::after {
	content: " ";
	height: 30rpx;
	width: 10rpx;
	border-radius: 0 10rpx 10rpx 0;
	position: absolute;
	background: #eeb63f;
	top: 50%;
	transform: translateY(-50%);
	left: 0;
}

.title4 {
	font-family: PingFangSC-Regular;
	font-size: 30rpx;
	color: #031126;
	position: relative;
	margin: 0 30rpx;
	padding: 7rpx 20rpx;
}

.title4::after {
	content: " ";
	height: 8rpx;
	width: 8rpx;
	border-radius: 50%;
	position: absolute;
	background: #aabdfb;
	top: 50%;
	transform: translateY(-50%);
	left: 0;
}

.desc {
	background: #f7fbff;
	border: 1rpx solid #d2ddff;
	border-radius: 10rpx;
	margin: 10rpx auto 20rpx;
	width: 580rpx;
	font-family: PingFangSC-Regular;
	font-size: 28rpx;
	color: #8a92a7;
	line-height: 40rpx;
	padding: 5rpx 20rpx;
}

.desc3 {
	background: #f7fbff;
	margin: 0rpx auto 20rpx;
	width: 630rpx;
	line-height: 40rpx;
	font-family: PingFangSC-Regular;
	font-size: 26rpx;
	color: #8d95a9;
}
.desc4 {
	font-family: PingFangSC-Regular;
	font-size: 24rpx;
	color: #6e7893;
	padding: 0 20rpx;
	background: #e5eef8;
    border-radius: 16.5rpx;
    width: auto;
}
