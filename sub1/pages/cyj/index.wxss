.kh1{height:368rpx;overflow:hidden}
.kh1 image{width:100%;height:368rpx;}
.kh2{height:511rpx;overflow:hidden}
.kh2 image{width:100%;height:511rpx;}
.intro{position:relative;padding:50rpx 0 150rpx;background:#fff;}
.service{padding:20rpx 0;}
.service .h2{line-height:40rpx;font-size:32rpx;text-align:center;margin-bottom:20rpx;}
.service .h2 span{display:inline-block;width:20rpx;height:20rpx;margin:0 20rpx;background:#fc8c44;box-shadow:0 0 20rpx #fc8c44;border-radius:20rpx;}
.sxfw{padding:0 30rpx;}
.sxfw .dl{display:inline-block;width:50%;height:100rpx;margin-bottom:15rpx;}
.sxfw .dl .dt{display:inline-block;width:100rpx;height:100rpx;vertical-align:middle}
.sxfw .dl .dt image{width:100%;height:100%;vertical-align:middle}
.sxfw .dl .dd{display:inline-block;vertical-align:middle}
.f30{font-size:30rpx;}
.f24{font-size:24rpx;color:#999;}
.tedian{position:relative;height:362rpx;}
.tedian image{width:100%;height:100%;}
.td{position:absolute;font-size:24rpx;color:#666;}
.t1{left:260rpx;top:20rpx;width:400rpx;}
.t2{left:285rpx;top:145rpx;width:425rpx;}
.t3{left:260rpx;top:270rpx;width:420rpx;}
.cl{display:block;width:700rpx;height:115rpx;margin:0 auto;}
.fbuttom{position:fixed;bottom:0;left:0;width:100%;height:100rpx;text-align:center;overflow:hidden;z-index:11;}
.btn{display:inline-block;width:300rpx;height:100rpx;margin:0 25rpx;border-radius:10rpx;text-align:center;line-height:100rpx;color:#fff;font-size:40rpx;border:none;background:linear-gradient(to left, rgba(240,168,0,0.3), rgba(234,150,3,1));overflow:hidden;}
.btn.blu{background:linear-gradient(to left, rgba(64,157,233,0.3), rgba(0,104,183,1));}

