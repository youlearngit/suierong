/* pages/nong/index.wxss */
.page{display:block;width:100%;background:#fff;overflow:hidden;}
.page image{display:block;width:100%;height:100%;}
.bg1{width:100%;height:1650rpx;}
.bg2{position:relative;width:100%;height:410rpx;}
.numb{position:absolute;left:140rpx;top:14rpx;font-size:130rpx;font-weight:900;color:#eca102;}
.bg3{width:100%;height:494rpx;}
.cpBox .dt{margin-bottom:20rpx;margin-right:40rpx;text-align:right;}
.cpBox .dt.tl{text-align:left;margin-top:20rpx;margin-left:40rpx;}
.cOra{color:#eca102;font-weight:700;}
.dt .t1{display:inline-block;width:278rpx;height:59rpx;}
.cpBox .dd{margin:0 40rpx;font-size:28rpx;}
.step{position:relative;width:100%;height:710rpx;}
.step image{width:100%;height:100%;}
.step .st{position:absolute;left:15%;top:200rpx;width:75%;font-size:30rpx;}
.step .st.s1{top:150rpx;}
.step .st.s2{top:290rpx;}
.step .st.s3{top:420rpx;}

.fbuttom{position:fixed;bottom:0;left:0;width:100%;height:100rpx;text-align:center;overflow:hidden;}
.btn{display:inline-block;width:300rpx;height:100rpx;margin:0 25rpx;border-radius:10rpx;text-align:center;line-height:100rpx;color:#fff;font-size:40rpx;border:none;background:linear-gradient(to left, rgba(240,168,0,0.3), rgba(234,150,3,1));overflow:hidden;}
.btn.blu{background:linear-gradient(to left, rgba(64,157,233,0.3), rgba(0,104,183,1));}
.shareBox{position:fixed;top:0;left:0;width:100%;height:100%;z-index:-1;overflow:hidden;}
.shareBox.on{z-index:1000;background:rgba(0,0,0,.8);}
.tools{position:absolute;left:0;bottom:40rpx;width:100%;text-align:center;}
.tools .tb{display:inline-block;width:80rpx;height:120rpx;margin:0 30rpx;font-size:26rpx;text-align:center;color:#fff;}
.tools .tb image{display:block;width:80rpx;height:80rpx;border-radius:80rpx;overflow:hidden;}
.shareToAPP button{background:none;border:0;outline:0;padding:0;}
.saveTxt{width:160rpx;text-align:center;margin-left:-40rpx;}
.shengcheng{width:600rpx;height:973rpx;position:fixed;top:50rpx;left:50%;top:50%;margin-left:-40%;margin-top:-70%;z-index:10}
.backtoIndex{position:fixed;right:0;bottom:120rpx;width:80rpx;height:80rpx;line-height:80rpx;text-align:center;font-size:22rpx;padding:0;border-radius:80rpx;color:#fff;background:#0066b3;z-index:100;}
