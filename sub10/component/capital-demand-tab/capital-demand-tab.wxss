.tabs {
  display: flex;
  flex-direction: row;
  height: 80rpx;
  position: relative;
  /* overflow-x: auto; */
  white-space: nowrap;
}

.scrollX{
  width: 95%;
}


.tab-text {
  position: relative;
  font-size: 28rpx;
  line-height: 70rpx;
  font-weight: 400;
  text-align: center;
  color: #999999;
  font-size: 24rpx;
  margin-left: 30rpx;
}

.line {
  background: #ffffff;
  border-radius: 4rpx;
  height: 8rpx;
  width: 40rpx;
  position: absolute;
  bottom: 4rpx;
  transition: all 0.3s linear;
  left: 50%;
  transform: translate(-50%, -50%);
}

.active {
  color: #ffffff;
  border-color: #4663dc;
}

