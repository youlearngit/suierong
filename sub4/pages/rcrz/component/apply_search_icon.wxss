.apply_search {
	position: relative;
	height: 87rpx;
	border-bottom: 1rpx solid rgba(236,236,236,1);
	display: flex;
	align-items: center;
	justify-content: space-between;
}
.apply_search scroll-view {
	position: absolute;
	right: 0;
	top: 90rpx;
	width: 100%;
	max-height: 340rpx;
	background: white;
	border-radius: 10rpx;
	box-sizing: border-box;
	box-shadow: 0rpx 5rpx 20rpx 0rpx rgba(0, 0, 0, 0.16);
	overflow: hidden;
	z-index: 3;
	padding: 10rpx 20rpx;
	text-align: left;
	font-family: PingFangSC-Regular;
	font-size: 28rpx;
	color: #041733;
	line-height: 50rpx;
}