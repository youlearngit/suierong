  top: 3rpx;
}
.comment-info{
  width: 98%;
  font-family: SourceHanSansCN-Regular;
  font-size: 24rpx;
  color: #FF6E58;
  letter-spacing: 0;
  font-weight: 400;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
}
