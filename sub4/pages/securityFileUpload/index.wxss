/* sub4/pages/securityFileUpload/index.wxss */
@import "/assets/styles/weui.wxss";
@import "/assets/styles/colorui/main.wxss";
@import "/assets/styles/colorui/animation.wxss";
@import "/assets/styles/colorui/icon.wxss";
page {
  overflow: hidden;
  height: 100%;
}
.box{
  width: 100%;
  height: 100%;
  padding: 200rpx 30rpx 0rpx 30rpx !important;
  background-repeat:no-repeat;
	background-size:100%;
    -moz-background-size:100%;
  overflow: scroll;
  z-index: -99;
}

/* 标题 */
.top-text-black{
  font-family: SourceHanSansCN-Bold;
  font-size: 66rpx;
  color: #333333;
  letter-spacing: 0;
  line-height: 80rpx;
  font-weight: 700;
}
.top-text-smail{
  margin-top: 48rpx;
  width: 420rpx;
  height: 28rpx;
  font-family: SourceHanSansCN-Regular;
  font-size: 28rpx;
  color: #999999;
  letter-spacing: 0;
  font-weight: 400;
}

/* 信息体 */
.center{
  margin-top: 92rpx;
}
.card{
  width: 690rpx;
  background: #FFFFFF;
  box-shadow: 0rpx 5rpx 12rpx 0rpx rgba(186,190,249,0.3);
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  padding: 30rpx;
}
.card-image-line-height{
  /* margin-top: 30%; */
}
.card-image{
  width: 72rpx;
  height: 72rpx;
}

.card-image-text{
  word-break: break-all; 
  margin-left: 20rpx;
  font-family: SourceHanSansCN-Medium;
  font-size: 32rpx;
  color: #333333;
  font-weight: 500;
  margin-top: 15rpx;
}
.card-text-smail{
  width: 137rpx;
height: 24rpx;
font-family: SourceHanSansCN-Regular;
font-size: 20rpx;
color: #999999;
letter-spacing: 0;
font-weight: 400;
}
.card-button-down{
  line-height: 70rpx;
  float: right;
  color: #5885FF;
  opacity: 0.63;
  margin: 0rpx 0rpx 0rpx 10rpx;
}
.uploadIdCardCenter{
  clear:both;
  margin-top: 31rpx;
}
.van-uploader{
  clear: both !important;
}
/* 按钮 */


.pgcityArea .formBtn {
  float: right;
  width: 60.8% !important;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  text-align: center;
  font-weight: 400;
}
.pgcityArea .formBtnCancle {
  float: left;
  width: 37.2% !important;
}
.buttom-height{
  height: 120rpx;
}
.icon-style{
